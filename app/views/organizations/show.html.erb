<%= render "layouts/sidebar" %>
<div class="container">
  <h2 class="organization-name"><%= @organization.name %></h2>

  <% if current_user.admin? %>
    <%= link_to "Rename Organization", edit_organization_path(@organization) %>
    <%= button_to "Delete Organization", @organization, method: :delete, class: 'btn btn-default' %>
  <% end %>

  <h2>Lists</h2>

  <% if current_user.admin? %>
    <p>Add list</p>
    <%= simple_form_for(:organization_list_membership, url: organization_list_memberships_path) do |f| %>
      <%= f.hidden_field :organization_id, value: @organization.id %>
      <%= f.input :influencer_list_id, as: :select, collection: @available_lists %>
      <%= f.submit "Add List", class: 'btn btn-default' %>
    <% end %>
  <% end %>

  <ul>
    <% @organization.influencer_lists.each do |list| %>
      <li class="influencer-list-<%= list.id %>">
        <%= link_to list.name, influencer_list_path(list) %>
        <%= button_to "Remove", organization_list_membership_path(list.organization_membership(@organization)), method: :delete, class: 'btn btn-default' %>
      </li>
    <% end %>
  </ul>

  <h2>Members of Organization</h2>

  <ul>
    <% @organization.users.each do |user| %>
      <li>
        <%= link_to image_tag(user.picture.url(:medium), :size => '175', alt: 'Profile Pic'), profile_path(id: user.id) %>
        <h4><%= link_to user.name, profile_path(user) %></h4>
        <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= mail_to user.email, user.email %></p>
        <h5><%= link_to organization_membership_path(user.organization_membership_in(@organization)), method: :delete, class: 'glyphicon glyphicon-remove-circle green' do %><span title="Delete Member From Organization"></span><% end %></h5><p>Remove User</p>
      </li>
    <% end %>
  </ul>
</div>