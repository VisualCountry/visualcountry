<h1 class="organization-name"><%= @organization.name %></h1>

<% if current_user.admin? %>
  <%= link_to "Rename Organization", edit_organization_path(@organization) %>
  <%= button_to "Delete Organization", @organization, method: :delete %>
<% end %>

<h2>Lists</h2>

<% if current_user.admin? %>
  <p>Add list</p>
  <%= simple_form_for(:organization_list_membership, url: organization_list_memberships_path) do |f| %>
    <%= f.hidden_field :organization_id, value: @organization.id %>
    <%= f.input :influencer_list_id, as: :select, collection: @available_lists %>
    <%= f.submit "Add List" %>
  <% end %>
<% end %>

<ul>
  <% @organization.influencer_lists.each do |list| %>
    <li class="influencer-list-<%= list.id %>">
      <%= link_to list.name, influencer_list_path(list) %>
      <%= button_to "Remove", organization_list_membership_path(list.organization_membership(@organization)), method: :delete %>
    </li>
  <% end %>
</ul>

<h2>Users</h2>

<ul>
  <% @organization.users.each do |user| %>
    <li>
      <%= link_to user.name, profile_path(user) %>
      <%= button_to "Remove", organization_membership_path(user.organization_membership_in(@organization)), method: :delete %>
    </li>
  <% end %>
</ul>
