<h1 class="organization-name"><%= @organization.name %></h1>

<% if current_user.admin? %>
  <%= link_to "Rename Organization", edit_organization_path(@organization) %>
  <%= button_to "Delete Organization", @organization, method: :delete %>
<% end %>

<ul>
  <% @organization.users.each do |user| %>
    <li>
      <%= link_to user.name, profile_path(user) %>
      <%= button_to "Remove", organization_membership_path(user.organization_membership_in(@organization)), method: :delete %>
    </li>
  <% end %>
</ul>
