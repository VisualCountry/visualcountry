<div class="container social-profiles profiles">
  <% @profiles.each_slice(3) do |profile_group| %>
    <div class="row">
      <% profile_group.each do |profile| %>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <%= link_to image_tag(profile.picture.url(:medium), :size => '300', alt: 'Profile Pic'), "/profiles/#{profile.id}"  %>
          <h2><%= profile.name %></h2>
          <p><%= profile.city %></p>
          <h4>TOTAL FOLLOWERS: <%= number_with_delimiter(profile.total_follower_count) %></h4>
          <h5> <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> <%= mail_to profile.email, profile.email %></h5>
          <% if profile.website %><h5><%= link_to profile.website, "http://#{profile.website}" %></h5><% end %>
          <div class="row">
            <% User::SOCIAL_PLATFORMS.each do |platform| %>
              <% if profile.send("#{platform}_follower_count") %>
                <div class="col-lg-2 col-md-2 col-sm-2">
                  <%= image_tag("#{platform}_logo.svg", size: '30', alt: "#{platform} Logo") %>
                  <h6 class="count"><%= number_with_delimiter(profile.send("#{platform}_follower_count")) %></h6>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <br>
    </div>
  <% end %>
</div>
