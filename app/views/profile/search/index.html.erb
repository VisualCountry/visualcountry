<div class="container social-profiles profiles">
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4">
      <% @profiles.each do |profile| %>
        <%= link_to image_tag(profile.picture.url, :size => '300', alt: 'Profile Pic')%>
        <h2><%= profile.name %></h2>
        <p><%= profile.city %></p>
        <h4>TOTAL FOLLOWERS: <%= number_with_delimiter(profile.total_social_count) %></h4>
        <h5> <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> <%= mail_to profile.email, profile.email %></h5>
        <% if profile.website %><h5><%= link_to profile.website, "http://#{profile.website}" %></h5><% end %>
        <div class="row">
          <% User::SOCIAL_PROFILES.each do |social| %>
            <% if profile.send("#{social}_follower_count") %>
              <div class="col-lg-2 col-md-2 col-sm-2">
                <%= image_tag("#{social}_logo.svg", size: '30', alt: "#{social} Logo") %>
                <h6 class="count"><%= number_with_delimiter(profile.send("#{social}_follower_count")) %></h6>
              </div>
            <% end %>
          <% end %>
        </div>
      <br>
      <% end %>
    </div>
  </div>
</div>
