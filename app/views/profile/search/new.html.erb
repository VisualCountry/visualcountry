<div class="container">
  <h1>Search</h1>
  <%= simple_form_for :search, method: :get, url: profile_search_results_path do |f| %>
    <%= f.input :query, required: false %>
    <%= f.input :interests, as: :check_boxes, collection: Interest.all, required: false %>
    <%= f.input :min_followers, required: false %>
    <%= f.input :max_followers, required: false %>
    <%= f.input :social_profiles, as: :check_boxes, collection: User::SOCIAL_PLATFORMS, required: false %>
    <%= f.input :focuses, as: :check_boxes, collection: Focus.all, required: false %>
    <%= f.submit %>
  <% end %>
</div>