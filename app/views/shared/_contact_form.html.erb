<h3 class="text-center">Get in Touch</h3>
<%= simple_form_for @contact_message, url: contact_messages_path, method: :post, html: { novalidate: true } do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'flat-form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :email_address, input_html: { class: 'flat-form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :phone_number, input_html: { class: 'flat-form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :instagram_account, input_html: { class: 'flat-form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :vine_account, input_html: { class: 'flat-form-control' } %>
  </div>
  <%= f.hidden_field :callback_controller, value: params[:callback_controller] || params[:controller] %>
  <%= f.hidden_field :callback_action, value: params[:callback_action] || params[:action] %>
  <div class="form-group">
    <%= f.input :body, input_html: { class: 'flat-form-control' } %>
  </div>
  <div class="text-center">
    <%= f.submit class: 'btn btn-default'%>
  </div>
<% end %>