<%= link_to image_tag(user.picture.url(:medium), :size => '300', alt: 'Profile Pic'), profile_path(id: user.id) %>
<h3><%= link_to user.name, profile_path(id: user.id) %></h3>
<p><%= user.focuses.map(&:name).join(', ') %></p>
<h5><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= user.city if user.city %></h5>
<h5><span class="glyphicon glyphicon-link" aria-hidden="true"></span> <% if user.website %><%= link_to user.website, "http://#{user.website}" %><% end %></h5>
<h5><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= mail_to user.email, user.email %></h5>
<h3>TOTAL FOLLOWERS: <%= number_with_delimiter(user.total_follower_count) %></h3>
<div class="row">
  <% User::SOCIAL_PLATFORMS.each do |platform| %>
    <% if user.send("#{platform}_follower_count") %>
      <div class="col-lg-2 col-md-2 col-sm-2">
        <%= image_tag("#{platform}_logo.svg", size: '30', alt: "#{platform} Logo") %>
        <h6 class="social-follower-count "><%= truncated_count(user.send("#{platform}_follower_count")) %></h6>
      </div>
    <% end %>
  <% end %>
</div>
