  <div class="text-center">
    <%= link_to 'Contact Us', brands_agencies_path, :class => "btn btn-default btn-lg" %>
  </div>
  <div class="container-social-links text-center">  
    <%= image_tag("vine_logo.svg", :class => "social-logos", :alt => "Vine Logo") %>      
    <%= image_tag("twitter_logo.svg", :class => "social-logos", :alt => "Twitter Logo") %>     
    <%= image_tag("instagram_logo.svg", :class => "social-logos", :alt => "Instagram Logo") %>   
