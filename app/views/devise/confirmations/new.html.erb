<div class="container">
  <div class="row">
    <div class="sign-up-form text-center">
      <h2>Resend Verification Instructions</h2>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "flat-form-control", placeholder: 'Email' %>
        </div>

        <div class="actions">
          <%= f.submit "Resend", class: "btn btn-default" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
