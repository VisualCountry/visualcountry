= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, defaults: { input_html: { class: "form-control" } }) do |f|
  - if resource.errors.any?
    .alert.alert-danger
      = devise_error_messages!
  .row.basic-info__section
    .col-md-6
      .form-group
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :email, autofocus: true, input_html: { class: 'flat-form-control' }
        = f.input :password, label: "Password (leave blank if you don't want to change it)", autocomplete: "off", input_html: { class: 'flat-form-control' }
        = f.input :password_confirmation, autocomplete: "off", input_html: { class: 'flat-form-control' }
  .actions
    = f.submit 'Update User', class: 'btn btn-default sign-up-button', id: 'test-update-user-submit'
